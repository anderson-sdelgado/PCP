<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.ListaMenuApontActivity">

    <TextView
        android:id="@+id/textViewVigia"
        style="@style/TextViewMenuNormal"
        android:text="@string/texto_menu_vigia" />

    <TextView
        android:id="@+id/textViewLocal"
        style="@style/TextViewMenuNormal"
        android:text="@string/texto_menu_local" />

    <TextView
        android:id="@+id/textViewTituloMenuApont"
        style="@style/TextViewTituloLista"
        android:text="@string/texto_titulo_menu" />

    <ListView
        android:id="@+id/listViewMenuApont"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonMovProprio"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_mov_veic_proprio" />

    <Button
        android:id="@+id/buttonMovVisitTerc"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_mov_veic_visit_terc" />

    <Button
        android:id="@+id/buttonMovResidencia"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_mov_veic_residencia" />

    <Button
        android:id="@+id/buttonSairMenuApont"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_padrao_fechar" />

</LinearLayout>