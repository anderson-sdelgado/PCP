<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".presenter.proprio.nome.NomeColabFragment">

    <TextView
        android:id="@+id/text_view_titulo_nome"
        style="@style/text_view_title_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_nome_colab" />

    <TextView
        android:id="@+id/text_view_nome"
        style="@style/text_view_msg_descr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:text="TESTE" />

    <LinearLayout
        android:id="@+id/right_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_canc_nome"
            style="@style/botao_avulso"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_padrao_canc" />

        <Button
            android:id="@+id/button_ok_nome"
            style="@style/botao_avulso"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_padrao_ok" />

    </LinearLayout>

</LinearLayout>